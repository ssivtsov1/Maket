cast(concat(day,'.',month,'.',year) as date)

create VIEW `vPokaz` AS select `a`.`id` AS `id`,`a`.`year` AS `year`,`a`.`month` AS `month`,`a`.`day` AS `day`,`a`.`kod_obl` AS `kod_obl`,`a`.`kod_pokaz` AS `kod_pokaz`,`a`.`kod_obj` AS `kod_obj`,`a`.`hour_1` AS `hour_1`,`a`.`hour_2` AS `hour_2`,`a`.`hour_3` AS `hour_3`,`a`.`hour_4` AS `hour_4`,`a`.`hour_5` AS `hour_5`,`a`.`hour_6` AS `hour_6`,`a`.`hour_7` AS `hour_7`,`a`.`hour_8` AS `hour_8`,`a`.`hour_9` AS `hour_9`,`a`.`hour_10` AS `hour_10`,`a`.`hour_11` AS `hour_11`,`a`.`hour_12` AS `hour_12`,`a`.`hour_13` AS `hour_13`,`a`.`hour_14` AS `hour_14`,`a`.`hour_15` AS `hour_15`,`a`.`hour_16` AS `hour_16`,`a`.`hour_17` AS `hour_17`,`a`.`hour_18` AS `hour_18`,`a`.`hour_19` AS `hour_19`,`a`.`hour_20` AS `hour_20`,`a`.`hour_21` AS `hour_21`,`a`.`hour_22` AS `hour_22`,`a`.`hour_23` AS `hour_23`,`a`.`hour_24` AS `hour_24`,`a`.`hour_25` AS `hour_25`,`a`.`allday` AS `allday`,`b`.`nazv` AS `nazv`,cast(concat(day,'.',month,'.',year) as date) as date from (`data_pokaz` `a` left join `sprpokaz` `b` on(((`a`.`kod_pokaz` = `b`.`kod`) and (`a`.`kod_obj` = `b`.`kod_obj`)))) order by `a`.`year`,`a`.`month`,`a`.`day`,`a`.`kod_pokaz`
